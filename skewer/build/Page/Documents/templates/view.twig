{{ form }}

{#{{ sViewReviews }}#}

{% if msg is not defined %}
    <h2>Список документов</h2>
    <table style="width: 100%; border-collapse: collapse;">
        {% for aItem in aDocs %}
            <tr>
                <td style="border: 2px solid black"><a href="{{ aItem.file }}">{{ aItem.name }}</a></td>
                <td style="border: 2px solid black">{{ aItem.description }}</td>
            </tr>
        {% endfor %}
    </table>
{% endif %}

{% if msg is defined %}
    <div class="b-msgbox">
        {{ msg }}
    </div>
{% endif %}
